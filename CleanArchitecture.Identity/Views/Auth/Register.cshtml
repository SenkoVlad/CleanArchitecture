@model RegisterViewModel
<head>
    <link href=@Url.Content("~/styles/style.css") rel="stylesheet" type="text/css" />
</head>
<form asp-controller="Auth" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="header">Register</div>
    <div class="block">
        <label>Username</label>
        <input class="input" asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="block">
        <label>Password</label>
        <input class="input" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="block">
        <label>Confirm password</label>
        <input class="input" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="block">
        <button class="button" type="submit">Register</button>
    </div>
    <a class="signButton" asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
</form>